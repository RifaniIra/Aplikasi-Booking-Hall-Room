<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.sch.smktelkom_mlg.learn.aplikasibookinghallroom.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi Pemesanan Hall Room" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:hint="Nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextNama" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:hint="No. KTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextNomor"
            android:inputType="numberSigned" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:text="Jumlah Orang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ea3838" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroupJumlah">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dibawah 100"
            android:id="@+id/radioButtonBawah" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 - 300"
            android:id="@+id/radioButtonTengah" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300 - 800"
            android:id="@+id/radioButtonAtas" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diatas 800"
            android:id="@+id/radioButtonAtasB" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fasilitas Tambahan"
        android:id="@+id/textViewFata"
        android:textColor="#ea3838" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Makanan dan Minuman"
        android:id="@+id/checkBoxMM"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Karaoke Set"
        android:id="@+id/checkBoxKS"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cindera Mata"
        android:id="@+id/checkBoxCM"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ekstra Audio"
        android:id="@+id/checkBoxEA"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seperangkat Laptop"
        android:id="@+id/checkBoxSL"
        android:checked="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgbtn"
        android:textColor="@android:color/white"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:text="OK"
        android:id="@+id/buttonOK" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil"
        android:id="@+id/textViewHasil"
        android:textColor="#3248ee" />

</LinearLayout>
</ScrollView>